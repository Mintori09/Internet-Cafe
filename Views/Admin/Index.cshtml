@{
    ViewData["Title"] = "Bảng Điều Khiển Quản Trị";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Left Content Area -->
        <div class="col-md-9">
            <h1>Bảng Điều Khiển Quản Trị</h1>
            
            <div id="revenueContent" class="mt-4">
                <!-- Content will be loaded here -->
            </div>
        </div>

        <!-- Right Navigation -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Thống Kê Doanh Thu</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <button class="list-group-item list-group-item-action active" onclick="loadRevenueByTime()">
                            Doanh Thu Theo Thời Gian
                        </button>
                        <button class="list-group-item list-group-item-action" onclick="loadRevenueByComputer()">
                            Doanh Thu Theo Máy
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadRevenueByTime() {
            $.get('@Url.Action("RevenueByTime", "Admin")', function(data) {
                $('#revenueContent').html(data);
                $('.list-group-item').removeClass('active');
                $('button:contains("Doanh Thu Theo Thời Gian")').addClass('active');
            });
        }

        function loadRevenueByComputer() {
            $.get('@Url.Action("RevenueByComputer", "Admin")', function(data) {
                $('#revenueContent').html(data);
                $('.list-group-item').removeClass('active');
                $('button:contains("Doanh Thu Theo Máy")').addClass('active');
            });
        }

        // Load initial data when page loads
        $(document).ready(function() {
            loadRevenueByTime();
        });
    </script>
}