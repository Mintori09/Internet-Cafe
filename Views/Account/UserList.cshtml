@model IEnumerable<InternetCafeManagementSystem.Models.User>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tên đăng nhập</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Số dư</th>
                            <th>Vai trò</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td class="text-end">
                                    <span class="badge bg-primary">@user.Balance.ToString("N0") VNĐ</span>
                                </td>
                                <td>
                                    @if (user.IsAdmin)
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">User</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Profile", "Account", new { id = user.Id })" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>